/* pages/spot/childrenCpts/my-spot-content/my-spot-content.wxss */
.spot-content {
  margin: 60rpx 40rpx 0;
  padding-bottom: 72rpx;
  border-bottom: 1px solid #e0e0e0;
}

.spot-content .title {
  margin-bottom: 36rpx;
  white-space: pre-line;
}

.spot-content .content-item {
  margin-bottom: 16rpx;
}

.spot-content .content-item .image-box {
  position: relative;
  width: 100%;
}

.spot-content .content-item .image-box .arrow-box {
  position: absolute;
  left: 60rpx;
  bottom: 16rpx;
  height: 16rpx;
}

.spot-content .content-item .image-box .arrow-box view {
  display: inline-block;
  width: 16rpx;
  border-bottom: 16rpx solid var(--color-background);
}

.spot-content .content-item .image-box .arrow-box .left {
  border-left: 16rpx solid transparent;
}
.spot-content .content-item .image-box .arrow-box .right {
  border-right: 16rpx solid transparent;
}

.spot-content .content-item .image-box image {
  width: 100%;
  vertical-align: middle;
}

.spot-content .content-item .text {
  margin-top: 28rpx;
  padding-bottom: 16rpx;
  white-space: pre-line;
}
