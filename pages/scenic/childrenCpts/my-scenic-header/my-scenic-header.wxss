/* pages/scenic/childrenCpts/my-scenic-header/my-scenic-header.wxss */
.icon-avatar-11 {
  display: inline-block;
  width: 44rpx;
  height: 56rpx;
  background-image: url("data:image/png;base64,");
  background-size: 44rpx 56rpx;
  background-repeat: no-repeat;
}

.scenic-header {
  position:  relative;
}

.scenic-header .image-box {
  width: 100%;

}

.scenic-header .image-box .image {
  background-size: cover;
  background-repeat: no-repeat;
  background-position: 50%;
  padding-bottom: 58%;
}

.scenic-header .title {
  position: relative;
}

.scenic-header .title .avatar-box {
  position: absolute;
  left: 50%;
  top: -22%;
  transform: translateX(-50%);
  width: 130rpx;
  height: 130rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #5acbda;
  border-radius: 50%;
  border: 8rpx solid #fbf7ed;

}

.scenic-header .title .name {
  font-size: var(--font-size-large-x);
  text-align: center;
  color: #4a4a4a;
  padding-top: 70rpx;
}

.scenic-header .title .rating-box {
  text-align: center;
  margin-top: 10rpx;
}

.scenic-header .title .desc {
  width: 78%;
  text-align: center;
  margin: 26rpx auto 0;
  padding-bottom: 66rpx;
}
