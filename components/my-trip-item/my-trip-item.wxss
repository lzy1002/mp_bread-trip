/* components/my-tirp-item/my-tirp-item.wxss */
.trip-item {
  position: relative;
  width: 100%;
  border: 1px solid #ccc;
  margin-bottom: 30rpx;
  border-radius: 4px;
  overflow: hidden;
}

.trip-item::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 280px;
  height: 100%;
  background: linear-gradient(90deg,rgba(0, 0, 0, 0.6),transparent);
}

.trip-item .cover-image {
  height: 0;
  padding-bottom: 51%;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}

.trip-item .content {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  color: #fff;
  padding: 24rpx 30rpx;
  z-index: 9;
}


.trip-item .content .title {
  font-size: var(--font-size-large);
  font-weight: 600;
  margin-bottom: 12rpx;
}

.trip-item .content .info {
  font-size: var(--font-size-small);
  border-left: 6rpx solid #4abdcc;
  padding-left: 10rpx;
}

.trip-item .content .info .day text {
  margin-right: 16rpx;
}

.trip-item .content .user {
  position: absolute;
  left: 30rpx;
  bottom: 30rpx;
  z-index: 10;
}

.trip-item .content .user image {
  width: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
  margin-right: 20rpx;
}

.trip-item .content .user .user-name {
  vertical-align: middle;
}
