/* components/my-tab-control/my-tab-control.wxss */
.tab-control {
  display: flex;
  padding: 10rpx 20rpx;
}

.tab-control .tab-item {
  flex: 1;
  text-align: center;
  height: 50rpx;
  line-height: 50rpx;
  color: #b0b0b0;
}

.tab-control .tab-item.active {
  border-radius: 50rpx;
  color: #fff;
  background: linear-gradient(0deg,#4abdcc,#51d7df);
}
